<%@ page import="java.util.List" %>
<%@ page import="java.util.HashMap" %>
<%@page import="adm.alumno.spring.AdmSolicitud"%>
<%@page import="adm.alumno.spring.AdmPasos"%>
<%@page import="adm.alumno.spring.AdmProceso"%>
<%@page import="adm.alumno.spring.AdmAsesor"%>
<%@page import="adm.alumno.spring.AdmCartaSubir"%>
<%@page import="adm.alumno.spring.AdmDirecto"%>
<%@page import="adm.parametros.spring.AdmParametros"%>
<%@page import="adm.vista.spring.Maestros"%>

<%@ include file= "head.jsp"%>
<%@ include file= "menu.jsp"%>
<head> 
	<link rel="STYLESHEET" href="/admision.css"  type="text/css">
	<script src="js/jquery-1.5.1.min.js" type="text/javascript"></script>  			
	<style>		
		body{
			background-image: url("imagenes/Biblioteca.png");
			/* Para dejar la imagen de fondo centrada, vertical y horizontalmente */
			background-position: center center;
			/* La imagen se fija en la ventana de visualizaci�n para que la altura de la imagen no supere a la del contenido */
			background-attachment: fixed;
			background-repeat: no-repeat;
			/* La imagen de fondo se reescala autom�ticamente con el cambio del ancho de ventana del navegador */
			background-size: cover;	
		} 
		a {text-decoration: none;} 
		a:hover {text-decoration: underline;} 
		.tabla td{padding:5px;}		
		
		.negro{
			color: black;
		}
		.naranja{
			color: #fd7e14;
		}
		.gris{
			color: #6c757d;
		}
		a> .fa{
			color: #337ab7;
		}
		
		@media (min-width: 587px) {
			.col-md-3{
				float: left;
				margin-left: 85px;
			}
		}
		@media (min-width: 764px) {
			.col-md-3{
				float: left;
				margin-left: 0;
			}		
		}
		@media (min-width: 480px) {
			.col-md-5{
				float: left;
			}
		}	
		/* Color Daisy Bush #5b3e90; rgb(83,38,163) */
	</style>
</head>
<%
	String usu 					= (String)session.getAttribute("Usuario")==null?"0":(String)session.getAttribute("Usuario");
	String gen 					= (String)session.getAttribute("Genero")==null?"M":String.valueOf(session.getAttribute("Genero"));
	String folio 				= (String)session.getAttribute("Folio")==null?"0":(String)session.getAttribute("Folio");
	boolean activo 				= (boolean)request.getAttribute("activo");
	boolean existeSol 			= (boolean)request.getAttribute("existeSol");	
	boolean existeEval 			= (boolean)request.getAttribute("existeEval");
	boolean existeCita			= (boolean)request.getAttribute("existeCita");
	boolean tienePago			= (boolean)request.getAttribute("tienePago");
	String planId				= (String)request.getAttribute("planId");
	int solAvance 				= (int)request.getAttribute("solAvance");
	int docAvance				= (int)request.getAttribute("docAvance");
	int dirAvance				= (int)request.getAttribute("dirAvance");	
	
	AdmSolicitud admSolicitud 	= (AdmSolicitud)request.getAttribute("admSolicitud");
	AdmCartaSubir admCartaSubir = (AdmCartaSubir)request.getAttribute("admCartaSubir");
	AdmPasos admPasos 			= (AdmPasos)request.getAttribute("admPasos");
	AdmAsesor admAsesor 		= (AdmAsesor)request.getAttribute("admAsesor");
	Maestros maestro	 		= (Maestros)request.getAttribute("maestro");	
	AdmProceso admProceso 		= (AdmProceso)request.getAttribute("admProceso");
	AdmParametros parametros	= (AdmParametros)request.getAttribute("parametros");

	String institucion = parametros.getInstitucion();
	
	HashMap<String, String> mapOpcionPlan 		= (HashMap<String, String>)request.getAttribute("mapOpcionPlan");	
	int estado 					= Integer.parseInt(admSolicitud.getEstado());
%>
<body>
<div class="container-fluid">
	<div class="row">
		<div class="col-lg-1" style="background-color:rgb(255,255,255,0.7);">
			<a style="color:black" href="<%=request.getContextPath()%>/registro">
			<span class="btn btn-outline-light position-relative" style="width: 100px; font-size: 13px;">
				
					<span style= "color:black"data-bs-toggle="tooltip" data-bs-placement="right" title="Account Details">
<% 					if(existeSol && admSolicitud.getEstado().equals("1")){%>
					<i class="negro fas fa-user fa-2x"></i>						
<% 					}else if (existeSol && admSolicitud.getEstado().equals("0")){%>
					<i class="naranja fas fa-user fa-2x"></i>						
<%					}else{ %>
					<i class="negro fas fa-user fa-2x"></i>
<%					} %>
						<br><spring:message code="inicial.Cuenta"/>
					</span>&nbsp;
			</span>
			</a>
<%			if(mapOpcionPlan.get(planId+"1") != null || planId.equals("0") || planId.equals("00000000")){ 
%>
			<a href="<%=request.getContextPath()%>/solicitud/modalidad" >
			<span class="btn btn-outline-light position-relative" style="width: 100px; font-size: 13px;">
					
					<span style="color:black" data-bs-toggle="tooltip" data-bs-placement="right" title="Admission Application">
<% 					if(solAvance == 2){%>
					<i class="negro far fa-file-alt fa-2x"></i>
						
<% 					}else if (solAvance == 1){%>
					<i class="naranja far fa-file-alt fa-2x"></i>
						
<%					}else{%>
					<i class="gris far fa-file-alt fa-2x"></i>
						
<% 					}%>
						<br><spring:message code="adm.Solicitud"/>
					</span>&nbsp;
				</a>
			</span>	
<%			} %>		
<%			if(mapOpcionPlan.get(planId+"2") != null || planId.equals("0") || planId.equals("00000000")){ %>
			<a href="<%=request.getContextPath()%>/documentos/documentos" >
			<span class="btn btn-outline-light position-relative" style="width: 100px; font-size: 13px;">
				
					<span style="color:black" data-bs-toggle="tooltip" data-bs-placement="right" title="Required Documents">
						
<% 					if(docAvance==2){%>
					<i class="negro fas fa-tasks fa-2x"></i>
						
<% 					}else if (docAvance==1){%>
						<i class="naranja fas fa-tasks fa-2x"></i>
<%					}else{%>
					<i class="gris fas fa-tasks fa-2x"></i>
						
<%					} %>
						<br><spring:message code="inicial.Documentos"/>
					</span>				
				</a>
			</span>	
<%			} %>
<%		if(mapOpcionPlan.get(planId+"3") != null || planId.equals("0") || planId.equals("00000000")){ %>	
			<a href="<%=request.getContextPath()%>/referencias?Folio=<%=folio%>" >		
			<span class="btn btn-outline-light position-relative " style="width: 100px; font-size: 13px;">
				
					<span style="color:black" data-bs-toggle="tooltip" data-bs-placement="right" title="Admission Fees">
<% 					if (tienePago){%>
				<i class="negro fas fa-credit-card fa-2x"></i>						
<%					}else{%>
				 <i class="gris fas fa-credit-card fa-2x"></i>						
<%					}%>						
						<br>Fees
					</span>&nbsp;
				</a>
			</span>	
<%		} %>		
<%		if(mapOpcionPlan.get(planId+"4") != null || planId.equals("0") || planId.equals("00000000")){ %>
			<a href="<%=request.getContextPath()%>/descargarCartaAdmision" >
			<span class="btn btn-outline-light position-relative" style="width: 100px; font-size: 13px;">
<% 				String colorCarta = "black";
				if(admCartaSubir.getCarta() != null){	
					colorCarta = "green";										
 				}%>												
				
					<span style="color:<%=colorCarta%>" data-bs-toggle="tooltip" data-bs-placement="right" title="Acceptance Letter">
						
<% 					if(!admSolicitud.getFechaIngreso().equals("-") && estado >= 4){%>
						<i class="negro fas fa-envelope fa-2x"></i>
												
<% 					}else{%>
						<i class="gris fas fa-envelope fa-2x"></i>
<% 					}%>												
						<br><spring:message code="inicial.Carta"/>
					</span>&nbsp;	
				</a>
			</span>
<%		} %>	
		</div>
		<div class="col-lg-11" style="background-color:white; min-height:calc(100vh - 37px);">
			<div align="left">
				<br>
				<h3>Welcome to the <b>Online Admissions System</b></h3>
				<br>
				<div class="alert alert-warning" role="alert">
					<h6>
						<!-- Did you know...? MESSAGE -->
<% if(institucion.equals("Sonoma")){ %><spring:message code="inicial.informacion.Sonoma"/> 
<% }else if(institucion.equals("Pacific Adventist University")){%><spring:message code="inicial.informacion.Pau"/>
<% }else if(institucion.equals("Fulton")){ %><spring:message code="inicial.informacion.Fulton"/> 
<% }else{%>Error displaying messages<% }%>
					</h6>
				</div>
				<h6>
						<!-- More facts about... MESSAGE -->
<% if(institucion.equals("Sonoma")){ %><spring:message code="inicial.informacion2.Sonoma"/> 
<% }else if(institucion.equals("Pacific Adventist University")){%><spring:message code="inicial.informacion2.Pau"/>
<% }else if(institucion.equals("Fulton")){ %><spring:message code="inicial.informacion2.Fulton"/> 
<% }else{%>Error displaying messages<% }%>
				</h6>
				<br>
				<div class="row">
					<div class="col" align="left">
						<h1><spring:message code="inicial.dudas"/></h1>
						<hr style="width: 420px;">
					</div>
				</div>
				<div class="row">					
					<div class="col-12" align="left">
						<h6>
							<i class="far fa-clock"></i> <span style="color: blue;"><strong><spring:message code="inicial.horarios"/>:</strong></span> 
						<!-- Hours... MESSAGE -->
<% if(institucion.equals("Sonoma")){ %><spring:message code="inicial.diasSemana.Sonoma"/> 
<% }else if(institucion.equals("Pacific Adventist University")){%><spring:message code="inicial.diasSemana.Pau"/>
<% }else if(institucion.equals("Fulton")){ %><spring:message code="inicial.diasSemana.Fulton"/> 
<% }else{%>Error displaying messages<% }%>
                  		</h6>
           			</div>					
				</div><br>
				<div class="row">					
					<div class="col-12" align="left">
						<h6>
							<i class="far fa-envelope"></i> 
							<span style="color: blue;">
						<!-- Email... MESSAGE -->
<% if(institucion.equals("Sonoma")){ %><spring:message code="inicial.correo.Sonoma"/> 
<% }else if(institucion.equals("Pacific Adventist University")){%><spring:message code="inicial.correo.Pau"/>
<% }else if(institucion.equals("Fulton")){ %><spring:message code="inicial.correo.Fulton"/> 
<% }else{%>Error displaying messages<% }%>
							 </span>
                 		</h6><br>
						<h6>
							<i class="fas fa-phone-alt"></i> 
						<!-- Contacto... MESSAGE -->
<% if(institucion.equals("Sonoma")){ %><spring:message code="inicial.contacto.Sonoma"/> 
<% }else if(institucion.equals("Pacific Adventist University")){%><spring:message code="inicial.contacto.Pau"/>
<% }else if(institucion.equals("Fulton")){ %><spring:message code="inicial.contacto.Fulton"/> 
<% }else{%>Error displaying messages<% }%>
                 		</h6><br>
						<h6>
							<i class="far fa-compass"></i> 
						<!-- Direccion... MESSAGE -->
<% if(institucion.equals("Sonoma")){ %><spring:message code="inicial.direccion.Sonoma"/> 
<% }else if(institucion.equals("Pacific Adventist University")){%><spring:message code="inicial.direccion.Pau"/>
<% }else if(institucion.equals("Fulton")){ %><spring:message code="inicial.direccion.Fulton"/> 
<% }else{%>Error displaying messages<% }%>
                 		</h6>
					</div>					
				</div>
			</div>
		</div>	
	</div>		
</div>		
</body>
<script>
	jQuery(function () {
		jQuery('[data-bs-toggle="tooltip"]').tooltip();	
	});
</script>	
</html>